FROM python:3.13-slim AS builder
ENV UV_LINK_MODE=copy UV_SYSTEM_PYTHON=1
WORKDIR /app

RUN apt-get update && apt-get install -y --no-install-recommends curl build-essential \
    && rm -rf /var/lib/apt/lists/* \
    && curl -LsSf https://astral.sh/uv/install.sh | sh \
    && ln -s /root/.local/bin/uv /usr/local/bin/uv

COPY pyproject.toml uv.lock ./
RUN --mount=type=cache,target=/root/.cache uv sync --locked --no-install-project --group prod

COPY . .
RUN --mount=type=cache,target=/root/.cache uv sync --locked --group prod
FROM python:3.13-slim AS runtime
ENV PYTHONUNBUFFERED=1 \
    PYTHONDONTWRITEBYTECODE=1 \
    VIRTUAL_ENV="/venv" \
    PATH="/venv/bin:/root/.local/bin:$PATH"
WORKDIR /app

COPY --from=builder /root/.local/bin/uv /usr/local/bin/uv
COPY --from=builder /app/.venv /venv
COPY --from=builder /app /app

RUN chmod +x /app/prod/entrypoint.sh